    "@nestjs/swagger": "^7.3.1",
    "@nestjs/typeorm": "^10.0.2",
    "@repo/dtos": "workspace:^",
    "@scalar/nestjs-api-reference": "^0.3.166",
    "@sendgrid/mail": "^8.1.4",
    "@sphereon/did-resolver-ebsi": "0.10.2-unstable.9",
    "@sphereon/did-resolver-jwk": "0.10.2-unstable.5",
    "@sphereon/pex-models": "2.0.3",
    "@tanglelabs/iota-identity-adapter": "0.3.7-alpha.3",
    "@tanglelabs/key-identity-adapter": "0.2.2",
    "@tanglelabs/oid4vc": "0.2.1-alpha.10",
    "@tanglelabs/resolver-did-key": "0.24.3",
    "@tanglelabs/ssimon": "^0.7.1",
    "@tanglelabs/typeorm-storage-driver": "^0.1.3",
    "@tanglelabs/web-identity-adapter": "^0.3.0",
    "@trust/keyto": "^1.0.1",
    "@types/dotenv": "^8.2.3",
    "@types/jsonwebtoken": "^9.0.7",
    "argon2": "^0.41.1",
    "axios": "^1.7.7",
    "class-transformer": "^0.5.1",
    "cookie-parser": "^1.4.7",
    "did-jwt": "^8.0.4",
    "did-resolver": "^4.1.0",
    "dotenv": "^16.4.5",
